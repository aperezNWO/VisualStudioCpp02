{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": ["-B",
                     "${workspaceFolder}/build",
                     "-S",
                     "${workspaceFolder}",
                     "-A",
                     "win32"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build", "--target", "clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/your_executable_name",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}